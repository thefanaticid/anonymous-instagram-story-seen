{
	"manifest_version": 3,
	"name": "See Instagram stories anonymously",
	"short_name": "Seen Instagram",
	"description": "See Instagram stories anonymously",
	"version": "2.0.0",
	"version_name": "2.0.0",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png",
		"256": "icons/icon256.png"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png"
		},
		"default_title": "Toggle On/Off"
	},
	"permissions": ["storage"],
	"host_permissions": ["https://*.instagram.com/*"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://*.instagram.com/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["injected.js"],
			"matches": ["https://*.instagram.com/*"]
		}
	]
}
